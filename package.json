{
  "name": "geoplayer",
  "version": "1.0.0",
  "description": "GeoPlayer - A multiplayer geography guessing game",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "main/main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"node server.js\" \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:renderer": "cd renderer && npx vite --port 5173",
    "dev:electron": "electron .",
    "build:renderer": "cd renderer && npx vite build",
    "build": "npm run build:renderer && electron-builder",
    "pack": "npm run build:renderer && electron-builder --dir",
    "dist": "npm run build:renderer && electron-builder --win",
    "dist:linux": "npm run build:renderer && electron-builder --linux"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "sharp": "^0.34.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.geoplayer.app",
    "productName": "GeoPlayer",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main/**/*",
      "preload/**/*",
      "renderer/dist/**/*",
      "assets/**/*",
      "server.js",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "server.js",
      "node_modules/express/**/*",
      "node_modules/cors/**/*",
      "node_modules/socket.io/**/*",
      "node_modules/socket.io-client/**/*",
      "node_modules/socket.io-parser/**/*",
      "node_modules/socket.io-adapter/**/*",
      "node_modules/engine.io/**/*",
      "node_modules/engine.io-parser/**/*",
      "node_modules/ws/**/*",
      "node_modules/debug/**/*",
      "node_modules/ms/**/*",
      "node_modules/accepts/**/*",
      "node_modules/mime-types/**/*",
      "node_modules/mime-db/**/*",
      "node_modules/negotiator/**/*",
      "node_modules/on-finished/**/*",
      "node_modules/ee-first/**/*",
      "node_modules/router/**/*",
      "node_modules/finalhandler/**/*",
      "node_modules/serve-static/**/*",
      "node_modules/body-parser/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Game"
    }
  },
  "dependencies": {
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  }
}